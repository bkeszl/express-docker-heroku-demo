{
  "heroku": {
    "driver": "pg",
    "DATABASE_URL": { "ENV": "DATABASE_URL" }
  },
  "dev": {
    "driver": "mysql",
    "user": {"ENV": "DB_USER"},
    "password": {"ENV": "DB_PASSWORD"},
    "host": {"ENV": "DB_HOST"},
    "database": {"ENV": "DB_NAME"},
    "port": {"ENV": "DB_PORT"},
    "multipleStatements": true,
    "dialect": "mysql"
  },
  "defaultEnv": "dev",
  "sql-file": true
}